{
    "image": "ghcr.io/userver-framework/ubuntu-22.04-userver:latest",
    "runArgs": [
        "--network", "host",
        "--cap-add=SYS_PTRACE",
        "--security-opt", "seccomp=unconfined"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash"
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools"
            ]
        }
    },
    "postCreateCommand": "pip3 install kafka-python protobuf",
    "forwardPorts": [8090]
}
