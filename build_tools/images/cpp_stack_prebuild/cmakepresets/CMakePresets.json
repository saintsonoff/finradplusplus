{
    "version": 5,
    "cmakeMinimumRequired": {
        "major": 4
    },
    "configurePresets": [
        {
            "name": "vlessblessed-preset-debug",
            "displayName": "vlessblessed-debug",
            "description": "g++ unix make files",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build",
            "hidden": false,
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            },
            "toolchainFile": "${fileDir}/toolchain.cmake"
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "vlessblessed-debug",
            "configurePreset": "vlessblessed-debug",
            "configuration": "Debug"
        },
        {
            "name": "release",
            "displayName": "ninj-clang-rls",
            "configurePreset": "ninja-clang-dbg",
            "configuration": "Release"
        }
    ]
}
